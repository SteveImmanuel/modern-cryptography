{
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: facebook, indent_width: 4, column_limit: 100}"
    ],
    "editor.rulers": [
        100
    ],
    "editor.formatOnSave": true
}